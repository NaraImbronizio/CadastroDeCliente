@model IEnumerable<CadastroDeCliente.Models.Cadastro_Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="add-btn">
        <a asp-action="Create" class="btn btn-success">Adicionar Cliente</a>
    </div>

    <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Data de Nascimento</th>
                <th>Sexo</th>
                <th>Endereço</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.DataNascimento?.ToString("dd/MM/yyyy")</td>
                        <td>@cliente.Sexo</td>
                        <td>
                            @cliente.Logradouro, @cliente.Numero, @cliente.Cidade - @cliente.Estado
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-primary">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Nenhum cliente encontrado</td>
                </tr>
            }
        </tbody>
    </table>
</div>
